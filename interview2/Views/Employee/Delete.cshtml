@model interview2.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Are you sure you want to delete this employee?</h2>

<div>
    <h4>@Model.NAME</h4>
    <p><strong>Position:</strong> @Model.POSITION</p>
    <p><strong>Department:</strong> @Model.DEPARTMENT</p>
    <p><strong>Salary:</strong> @Model.SALARY</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
